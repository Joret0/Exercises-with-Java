import java.util.Scanner;

public class VegetableExchange {
    public static void main(String[] args) {
        Scanner console = new Scanner(System.in);

        double priceVegetables = Double.parseDouble(console.nextLine());
        double priceFruits = Double.parseDouble(console.nextLine());
        int vegetables = Integer.parseInt(console.nextLine());
        int fruits = Integer.parseInt(console.nextLine());

        double profitInEvro = ((priceVegetables * vegetables) + (priceFruits * fruits)) / 1.94;

        System.out.println(profitInEvro);
    }
}
